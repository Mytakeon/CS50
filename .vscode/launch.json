  "version": "0.2.0",
  "configurations": [
    {
      "name": "gcc - Build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": ":C_INCLUDE_PATH",
          "value": "${workspaceFolder}/libcs50/include"
        }
      ],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "gcc build active file"
    }
  ]
}
