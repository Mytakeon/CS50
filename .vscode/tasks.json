{
  "tasks": [
    {
      "type": "shell",
      "label": "build active file",
      "command": "clang",
      "args": [
        "-ggdb3",
        "-O0",
        "-std=c11",
        "-Wall",
        "-Werror",
        "-Wextra",
        "-Wno-sign-compare",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
        "-Wshadow",
        "${file}",
        "-lcs50",
        "-lm",
        "-o",
        "${relativeFileDirname}/${fileBasenameNoExtension}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
